#img1 {}
#img2 IMG {width:100%;}
#img3 IMG {width:100%; max-width:320px;}
#img8 IMG {max-width:100%;}
#img4 {overflow:hidden;}
#img5 {overflow:hidden;}
#img5 IMG {float:right;}
#img6 {background:url(/sandbox/imagetests/wideimg.png) no-repeat center; height:171px}
